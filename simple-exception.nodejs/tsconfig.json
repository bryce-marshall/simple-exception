{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "removeComments": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "outDir": "build"
    },
    "include": [
        "*.ts",
        "package-src"
    ],
    "exclude": [
        ".vscode",
        "build",
        "node_modules"
    ]
}
